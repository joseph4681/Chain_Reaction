<Grid>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<Game>
    green_points_l: green_points_l
    red_points_l: red_points_l
    player_l : player_l

    Label:
        id: green_points_l
        text: "Green Points : 0"
        x: self.parent.x
        y: 0
        size_hint_x: 150/self.parent.width
        size_hint_y: 100/self.parent.height

    Label:
        id: red_points_l
        text: "Red Points : 0"
        x: self.parent.width - 150
        y: 0
        size_hint_x: 150/self.parent.width
        size_hint_y: 100/self.parent.height

    Label:
        id: player_l
        text: "Green Player Turn"
        x: (self.parent.width - 100) / 2
        y: 0
        size_hint_x: 100/self.parent.width
        size_hint_y: 100/self.parent.height


